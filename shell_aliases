# takes you to the last directory you were in
alias cd-='cd "$OLDPWD"'

# tmux aliases
#  forces 256 color mode
alias tmux='tmux -2'
#  shorter version of ridiculously long command
alias tas='tmux attach-session -t'
alias tls='tmux ls'

# some more ls aliases
alias ll='ls -AlF'
alias la='ls -A'
alias l='ls -CF'

alias vi='vim'

# git aliases
alias ga='git add'
alias gst='git status'
alias gd='git d'
alias gcm='git commit -m '

# rails aliases
alias rc='rails console'
alias rs='rails server'

# apt-get aliases
alias sagi='sudo apt-get install'
alias sag='sudo apt-get'

# ssh alias to enable ssh compression
alias ssx='ssh -C -X -c blowfish'
